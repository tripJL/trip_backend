<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.website.trip.biz.dao.UserDao">
    <sql id="TABLE_NAME">user</sql>

    <select id="selectOne" resultType="com.website.trip.biz.dto.UserDto">
        SELECT T1.*
        FROM <include refid="TABLE_NAME"/>
        WHERE T1.LOGIN_ID = #{value}
    </select>

    <insert id="insert">
        INSERT INTO <include refid="TABLE_NAME"/>
        (
            REG_DT
            , REG_ID
            , LOGIN_ID
            , EMAIL
            , PASSWORD
            , GRADE
            , LOGIN_TYPE
        )
        VALUES
        (
            NOW()
            , #{loginUserId}
            , #{loginId}
            , #{email}
            , #{password}
            , #{grade}
            , #{loginType}
        )
    </insert>

    <update id="update">
        UPDATE <include refid="TABLE_NAME"/>
        SET (
            UPD_DT = NOW()
            , UPD_ID = #{loginUserId}
            <choose>
                <when test="sqlUpdateType eq 'MODIFY_PASSWORD'">
                    , PASSWORD = #{password}
                </when>
                <when test="sqlUpdateType eq ''">

                </when>
                <when test="sqlUpdateType eq ''">

                </when>
                <otherwise>
                </otherwise>
            </choose>
        )
        WHERE LOGIN_ID = #{loginId}
    </update>
</mapper>