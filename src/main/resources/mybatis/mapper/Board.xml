<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.website.trip.biz.dao.BoardDao">
    <sql id="TABLE_NAME">board</sql>

    <sql id="selectWhereRequire">
        AND T1.DEL_YN = 0
    </sql>

    <sql id="selectWhere">

        <if test="searchType != null and searchValue != null">
            <choose>
                <when test="searchType eq 'title'">
                    AND T1.TITLE = ${searchValue}
                </when>
                <when test="searchType eq 'contents'">
                    AND T1.contents = ${searchValue}
                </when>
                <otherwise>
                    AND (
                        T1.TITLE = ${searchValue} OR
                        T1.CONTENTS = ${searchValue}
                    )
                </otherwise>
            </choose>
        </if>
    </sql>

    <select id="selectOne" resultType="com.website.trip.biz.dto.BoardDto">
        SELECT T1.*
        FROM <include refid="TABLE_NAME"/> T1
        WHERE T1.ID = #{value}
        <include refid="selectWhereRequire"/>
    </select>

    <select id="selectList" resultType="com.website.trip.biz.dto.BoardDto">
        SELECT T1.*
        FROM <include refid="TABLE_NAME"/> T1
        WHERE 1 = 1
        <include refid="selectWhereRequire"/>
        <include refid="selectWhere"/>
        ORDER BY T1.ID DESC
        LIMIT #{startIndex}, #{pageSize}
    </select>

    <select id="selectListCount" resultType="int">
        SELECT COUNT(*)
        FROM <include refid="TABLE_NAME"/> T1
        WHERE 1 = 1
        <include refid="selectWhereRequire"/>
        <include refid="selectWhere"/>
    </select>

    <insert id="insert">
        INSERT INTO <include refid="TABLE_NAME"/>
        (
            REG_DT
            , REG_ID
            , BOARD_TYPE
            , CATEGORY
            , TITLE
            , CONTENTS
            , HITS
            , THUMBNAIL_FILE_ID
        )
        VALUES
        (
            NOW()
            , #{loginUserId}
            , #{boardType}
            , #{category}
            , #{title}
            , #{contents}
            , #{hits}
            , #{thumbnailFileId}
        )
    </insert>

    <update id="update">
        UPDATE <include refid="TABLE_NAME"/>
        SET (
            UPD_DT = NOW()
            , UPD_ID = #{loginUserId}
            , BOARD_TYPE = #{boardType}
            , CATEGORY = #{category}
            , TITLE = #{title}
            , CONTENTS = #{contents}
            , THUMBNAIL_FILE_ID = #{thumbnailFileId}
        )
        WHERE LOGIN_ID = #{loginId}
    </update>
</mapper>